{
    "elements": [
        { "type": "CheckBox", "name": "StandaloneMode", "caption": "Run in Standalone Mode" },
        { "type": "Label", "label": "If unchecked, runs in Adaptive Mode. If checked, uses fixed values below." },
        { "type": "Label", "label": " " },
        { "type": "CheckBox", "name": "Debug", "caption": "Enable Debug Logging" },
        { "type": "NumberSpinner", "name": "TimerInterval", "caption": "Processing Interval (seconds)", "defaultValue": 60 },
        { "type": "NumberSpinner", "name": "Hysteresis", "caption": "Global Hysteresis", "suffix": "Â°", "defaultValue": 0.5 },
        { "type": "Label", "label": " " },
        { "type": "Label", "label": "--- System-Wide Controls ---" },
        { "type": "SelectVariable", "name": "HeatingActiveLink", "caption": "Heating Active Link (disables cooling)" },
        { "type": "SelectVariable", "name": "VentilationActiveLink", "caption": "Ventilation Active Link (disables cooling)" },
        { "type": "SelectVariable", "name": "MainACOnOffLink", "caption": "Main AC Unit Variable" },
        { "type": "SelectVariable", "name": "MainFanControlLink", "caption": "Main Fan Variable" },
        { "type": "SelectVariable", "name": "MasterBedSpecialModeLink", "caption": "Master Bedroom Special Mode Link" },
        { "type": "SelectVariable", "name": "MainStatusTextLink", "caption": "System Status Text Variable" },
        { "type": "Label", "label": " " },
        {
            "type": "Label",
            "label": "--- Standalone Mode Settings ---",
            "visible": "this.StandaloneMode"
        },
        {
            "type": "NumberSpinner",
            "name": "ConstantPower",
            "caption": "Fixed Power Value",
            "suffix": "%",
            "defaultValue": 80,
            "visible": "this.StandaloneMode"
        },
        {
            "type": "NumberSpinner",
            "name": "ConstantFanSpeed",
            "caption": "Fixed Fan Speed Value",
            "suffix": "%",
            "defaultValue": 80,
            "visible": "this.StandaloneMode"
        },
        { "type": "Label", "label": " " },
        {
            "type": "List",
            "name": "ControlledRooms",
            "caption": "Controlled Rooms",
            "rowCount": 8,
            "add": true,
            "delete": true,
            "columns": [
                { "caption": "Room Name", "name": "name", "width": "150px", "add": "New Room", "edit": { "type": "ValidationTextBox" } },
                { "caption": "Temp Sensor", "name": "tempID", "width": "200px", "add": 0, "edit": { "type": "SelectVariable" } },
                { "caption": "Target Temp", "name": "targetID", "width": "200px", "add": 0, "edit": { "type": "SelectVariable" } },
                { "caption": "Demand Variable", "name": "demandID", "width": "200px", "add": 0, "edit": { "type": "SelectVariable" }, "visible": "!this.StandaloneMode" },
                { "caption": "Flap Control", "name": "flapID", "width": "200px", "add": 0, "edit": { "type": "SelectVariable" } },
                { "caption": "Flap Type", "name": "flapType", "width": "120px", "add": "boolean", "edit": { "type": "Select", "options": [{"label": "Boolean", "value": "boolean"}, {"label": "Linear", "value": "linear"}] } },
                { "caption": "Value OPEN", "name": "flapOpenValue", "width": "100px", "add": "true", "edit": { "type": "ValidationTextBox" } },
                { "caption": "Value CLOSED", "name": "flapClosedValue", "width": "100px", "add": "false", "edit": { "type": "ValidationTextBox" } },
                { "caption": "AC Mode", "name": "airSollStatusID", "width": "200px", "add": 0, "edit": { "type": "SelectVariable" } },
                { "caption": "Phase Info", "name": "coolingPhaseInfoID", "width": "200px", "add": 0, "edit": { "type": "SelectVariable" } },
                { "caption": "Window Category", "name": "windowCatID", "width": "200px", "add": 0, "edit": { "type": "SelectCategory" } }
            ]
        }
    ],
    "actions": [],
    "status": []
}
